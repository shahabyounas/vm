rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - users can read/write their own data, admins can access all
    match /users/{userId} {
      allow read, write: if request.auth != null && (request.auth.uid == userId || 
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'super_admin']));
    }
    
    // Global settings - only admins and super admins can read/write
    match /settings/{document=**} {
      allow read, write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'super_admin'];
    }
    
    // Scans collection - users can read/write their own scans, admins can access all
    match /scans/{scanId} {
      allow read, write: if request.auth != null && (resource.data.userId == request.auth.uid || 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'super_admin']);
    }
    
    // Rewards collection - users can read their own rewards, admins can access all
    match /rewards/{rewardId} {
      allow read: if request.auth != null && (resource.data.userId == request.auth.uid || 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'super_admin']);
      allow write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'super_admin'];
    }
    
    // Test collection - allow read for testing purposes (remove in production)
    match /test/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Temporary: Allow initial seeding (remove this after first run)
    match /{document=**} {
      allow read, write: if true;
    }
  }
}